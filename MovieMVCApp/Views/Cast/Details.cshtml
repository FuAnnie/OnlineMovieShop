@model Cast

<div class="row">
    <div class="col-md-3">
        <img src="@Model.ProfilePath" class="img-fluid" alt="Model.Name">
    </div>
    <div class="col-md-6">
        <h2>@Model.Name</h2>
        <a href="@Model.TmdbUrl" class="btn btn-info btn-sm">Tmdb</a>
        <h5 class="mt-3">Filmography: </h5>
        <ul class="list-group">
            @foreach (var movieCast in Model.MovieCasts)
            {
                <li class="list-group-item">
                    <a href="/Movie/Details/@movieCast.Movie.Id">@movieCast.Movie.Title</a>
                </li>
            }
        </ul>
    </div>
</div>